{
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "indent": ["error", 2, {"SwitchCase": 1, "MemberExpression": 1}],
    "strict": ["error", "global"],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true, "optionalDependencies": true, "peerDependencies": false}]
  }
}
